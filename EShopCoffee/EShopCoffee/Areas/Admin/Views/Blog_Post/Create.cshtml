@model EShopCoffee.Models.DataLayer.Blog_Post

@{
    ViewBag.Title = "Create";
}


<div class="container">
    @using (Html.BeginForm("Create", "Blog_Post", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
@Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                                <div class="row" style="text-align: right;">
                                    <div class="col-lg-12">
                                        <div class="box">
                                            <h3 class="text-center color_defult">افزودن بلاگ</h3>
                                            <hr />
                                            @if (ViewBag.ErorrSelectedGroups == true)
                                            {
                            <div class="alert alert-danger">لطفا گروه م را انتخاب کنید </div>}
                                            @if (ViewBag.ErorrIsImage == true)
                                            {
                            <div class="alert alert-danger">لطفا فایل عکس اپلود کنید </div>}
                                            <div class="row">
                                                <div class="form-group col-lg-6">
                                                    @Html.LabelFor(model => model.post_Title, htmlAttributes: new { @class = "text-dark label" })
                                                    @Html.EditorFor(model => model.post_Title, new { htmlAttributes = new { @class = "form-control" } })
                                                    <p>
                                                        @Html.ValidationMessageFor(model => model.post_Title, "", new { @class = "text-danger" })
                                                    </p>
                                                </div>
                                                <div class="form-group col-lg-6">
                                                    @Html.LabelFor(model => model.post_ShortDiscription, htmlAttributes: new { @class = "text-dark label" })
                                                    @Html.EditorFor(model => model.post_ShortDiscription, new { htmlAttributes = new { @class = "form-control" } })
                                                    <p>
                                                        @Html.ValidationMessageFor(model => model.post_ShortDiscription, "", new { @class = "text-danger" })
                                                    </p>
                                                </div>
                                            </div>
                                            <div class="row">
                                                <div class="form-group col-lg-6">
                                                    <div class="row text-center">
                                                        <div class="col-lg-6 mt-2">
                                                            @Html.EditorFor(model => model.post_Discription, new { @class = "checkbox" })
                                                            @Html.LabelFor(model => model.post_Discription, new { @class = "form-check-label" })
                                                            <p>
                                                                @Html.ValidationMessageFor(model => model.post_Discription, "", new { @class = "text-danger" })
                                                            </p>
                                                        </div>
                                                        <div class="col-lg-6 mt-2">
                                                            @Html.EditorFor(model => model.post_Image, new { @class = "checkbox" })
                                                            @Html.LabelFor(model => model.post_Image, new { @class = "form-check-label" })
                                                            <p>
                                                                @Html.ValidationMessageFor(model => model.post_Image, "", new { @class = "text-danger" })
                                                            </p>
                                                        </div>
                                                    </div>

                                                </div>
                                                <div class="form-group col-lg-6">
                                                    @Html.LabelFor(model => model.post_Video, htmlAttributes: new { @class = "text-dark label" })
                                                    @Html.EditorFor(model => model.post_Video, new { htmlAttributes = new { @class = "form-control" } })
                                                    <p>
                                                        @Html.ValidationMessageFor(model => model.post_Video, "", new { @class = "text-danger" })
                                                    </p>
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <label class="text-dark label">کلمات کلیدی </label>
                                                <input class=" form-control" type="text" name="tags" placeholder="کلمات کلیدی را با # جدا کنید" />
                                            </div>
                                            <div id="accordion" class="mt-4">
                                                <div class="card border-primary mb-3">
                                                    <div id="heading" class="card-header p-0 border-0">
                                                        <h4 class="mb-0">
                                                            <a href="#" data-toggle="collapse" data-target="#collapse" aria-expanded="true" aria-controls="collapseOne" class="textalign btn btn-primary d-block text-left rounded-0">توضیحات</a>
                                                        </h4>
                                                    </div>
                                                    <div id="collapseOne" aria-labelledby="heading" data-parent="#accordion" class="collapse show">
                                                        <div class="card-body">
                                                            @Html.EditorFor(model => model.post_datetime, new { htmlAttributes = new { @class = "form-control" } })
                                                        </div>
                                                    </div>
                                                </div>
                                                <p>
                                                    @Html.ValidationMessageFor(model => model.post_datetime, "", new { @class = "text-danger" })
                                                </p>
                                            </div>
                                            <div id="accordionOne" class="mt-4">
                                                <div class="card border-primary mb-3">
                                                    <div id="headingOne" class="card-header p-0 border-0">
                                                        <h4 class="mb-0">
                                                            <a href="#" data-toggle="collapse" data-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne" class="textalign btn btn-primary d-block text-left rounded-0">انتخاب تصویر</a>
                                                        </h4>
                                                    </div>
                                                    <div id="collapseOne" aria-labelledby="headingOne" data-parent="#accordionOne" class="collapse show">
                                                        <div class="card-body">
                                                            <div class="row">
                                                                <span class="col-lg-4 mt-5">
                                                                    <input type="file" style="margin: 10px;" id="imageProduct" name="imageProduct" />
                                                                </span>
                                                                <sapn class="col-lg-5">
                                                                    <img id="ImgPreviewProduct" name="ImgPreviewProduct" style="margin: 10px auto; width: 150px" class="img-thumbnail" src="~/Images/ProductImages/images.png" />
                                                                </sapn>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <div id="accordionTwo">
                                                <div class="card border-primary mb-3">
                                                    <div id="headingTwo" class="card-header p-0 border-0">
                                                        <h4 class="mb-0">
                                                            <a href="#" data-toggle="collapse" data-target="#collapseTwo" aria-expanded="true" aria-controls="collapseTwo" class="textalign btn btn-primary d-block text-left rounded-0">دسته بندی</a>
                                                        </h4>
                                                    </div>
                                                   

                                                </div>
                                                <div class="row">
                                                    <div class="text-center col-lg-12 mt-3 mb-3">
                                                        <a href="@Url.Action("Index")" class="btn btn-danger w-25">
                                                            <i class="fa fa-arrow-left"> </i>بازگشت
                                                        </a>
                                                        <button type="submit" class="btn btn-primary w-25"><i class="fa fa-sign-in"></i>ثبت</button>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                </div>}
</div>

