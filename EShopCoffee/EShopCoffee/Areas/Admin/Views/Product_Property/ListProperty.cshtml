@model IEnumerable<EShopCoffee.Models.DataLayer.Product_Property>

    <table class="table table-hover text-center" dir="rtl">
        <thead>
        <tr>
            <th>ویژگی</th>
            <th></th>
        </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr id="Prop_@item.Property_Id">
                    <td>@item.Property_Title</td>
                    <td>
                        <a onclick="EditProperty(@item.Property_Id)"  class="btn btn-sm btn-warning" title="ویرایش ویژگی">
                            <i class="fa fa-edit"></i>
                        </a>
                        <a onclick="DeleteProperty(@item.Property_Id)" class="btn btn-sm btn-danger" title="حذف ویژگی">
                            <i class="fa fa-trash"></i>
                        </a>
                    </td>
                </tr>

            }
        </tbody>
    </table>