@model EShopCoffee.Models.DataLayer.Product_Property

@{
    ViewBag.Title = "CreateProperty";
}

<div class="container">
    <div class="box">
        <div class="text-center mb-3">
            @using (Ajax.BeginForm("Create", "Product_Property",FormMethod.Post,new AjaxOptions()
        {
            OnSuccess = "SuccessProperty",
            UpdateTargetId = "ListProperty"
        }))
        {
            @Html.AntiForgeryToken()
            <div class="form-horizontal">
                <div class="row" style="text-align: right;">
                    <div class="col-lg-12">
                        <h3 class="text-center color_defult">افزودن ویژگی</h3>
                        <div>
                            <div class="form-group">
                                <label>عنوان ویژگی</label>
                                @Html.EditorFor(model => model.Property_Title, new { htmlAttributes = new { @class = "form-control" } })
                                <p>
                                    @Html.ValidationMessageFor(model => model.Property_Title, "", new { @class = "text-danger" })
                                </p>
                            </div>
                        </div>
                        <div class="row">
                            <div class="text-center col-lg-12 mt-3 mb-3">
                                <button type="submit" class="btn btn-primary w-25">ثبت<i class="fa fa-save"></i></button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
             } 
        </div>
    </div>
</div>