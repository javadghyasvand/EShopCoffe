@model EShopCoffee.Models.DataLayer.Users

<div class="container textalign">
    <div class="box">
        <h3 class="text-center color_defult">کاربران</h3>
        <hr/>
        <div dir="rtl">
            @Html.HiddenFor(model => model.User_Id)
            <div>
                <div class="text-center textalign">
                    <span>
                        <img id="ImgPreviewProduct" name="ImgPreviewProduct" style="margin: 1px auto; max-width: 100px" class="img-thumbnail rounded-circle" src="~/Images/UserImge/@Model.User_Image"/>
                    </span>
                    <span class="font-weight-bolder mt-3 d-block text-primary">@Model.User_Name</span>
                </div>
                <hr/>

                <div class="row mt-2">
                    <div class="text-dark col-lg-5 ">
                        <label>ایمیل:</label>
                        @Html.DisplayFor(model => model.User_Email, null, new { @class = "text-dark" })
                    </div>
                    <div class="text-dark col-lg-5">
                        <label>شماره تماس:</label>
                        @Html.DisplayFor(model => model.User_Phone, null, new { @class = "text-dark" })
                    </div>
                </div>

                <div class="row mt-2">
                    <div class="text-dark col-lg-5">
                        <label>وضعیت:</label>
                        @Html.DisplayFor(model => model.User_IsActive, null, new { @class = "text-dark" })
                    </div>
                    <div class="text-dark col-lg-5">
                        <label> نقش:</label>
                        @Html.DisplayFor(model => model.Roles.Role_Title, null, new { @class = "text-dark" })
                    </div>
                </div>
                <hr/>
                <h5 class="text-center color_defult mb-4">آدرس</h5>
                <div class="row mt-2">
                    <div class="text-dark col-lg-5">
                        <label>استان:</label>
                        @Html.DisplayFor(model => model.User_State_Name, null, new { @class = "text-dark" })
                    </div>
                    <div class="text-dark col-lg-5">
                        <label>شهر:</label>
                        @Html.DisplayFor(model => model.User_City_Name, null, new { @class = "text-dark" })
                    </div>
                </div>
                <div class="row mt-2">
                    <div class="text-dark col-lg-5 ">
                        <label>کد پستی:</label>
                        @Html.DisplayFor(model => model.User_Postal_Code, null, new { @class = "text-dark" })
                    </div>
                    <div class="text-dark col-lg-5">
                        <label class="mb-2">آدرس:</label>
                        @Html.DisplayFor(model => model.User_Address, null, new { @class = "text-dark" })
                    </div>
                </div>
                <hr/>
                <div class="form-group  text-center">
                    <div >
                        <a class="btn btn-warning text-light" href=@Url.Action("Edit", "Users", new { id = Model.User_Id })>
                            ویرایش <i class="fa fa-edit"></i>
                        </a>
                        <a href="@Url.Action("Index", "AdminHome")" class="btn text-light btn-primary">
                            صفحه اصلی <i class="fa fa-home"></i>
                        </a>
                        <a href="@Url.Action("Index")" class="btn text-light btn-info">
                            بازگشت <i class="fa fa-arrow-circle-left"> </i>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>