@using MyShop.Utilities
@model IEnumerable<EShopCoffee.Models.DataLayer.Users>

@{
    ViewBag.Title = "Index";
}
<div id="customer-orders" class="container">
    <div class="box">
        <h3 class="text-center color_defult">کاربران</h3>
        <div class="table-responsive" dir="rtl">
            <table class="table table-hover text-center">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.User_Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.User_Email)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.User_Phone)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.User_IsActive)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.User_Image)
                        </th>
                        <th>
                            سطح دسترسی
                        </th>
                        <th>
                        </th>
                    </tr>
                </thead>
                <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.User_Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.User_Email)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.User_Phone)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.User_IsActive)
                        </td>
                        <td>
                            <img style="width: 100px" class="img-thumbnail rounded-circle" src="~/Images/UserImge/Thumbnail/@item.User_Image"/>
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Roles.Role_Title)
                        </td>
                        <td>
                            <a class="btn btn-sm btn-warning btn-block" title="ویرایش" href="@Url.Action("Edit", new { id = item.User_Id })">
                                <i class="fa fa-pencil-square-o" aria-hidden="true"></i>
                            </a>
                            <a class="btn btn-sm btn-info btn-block mr-0" title="جزئیات" href="@Url.Action("Details", new { id = item.User_Id })">
                                <i class="fa fa-info-circle" aria-hidden="true"></i>
                            </a>
                        </td>
                    </tr>
                }

                </tbody>
            </table>
        </div>
    </div>
</div>