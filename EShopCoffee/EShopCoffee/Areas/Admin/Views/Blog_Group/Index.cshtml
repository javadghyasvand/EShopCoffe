@model IEnumerable<EShopCoffee.Models.DataLayer.Blog_Group>

@{
    ViewBag.Title = "Index";
}




<div id="customer-orders" class="container">
    <div class="box">
        <h3 class="text-center color_defult">دسته بندی بلاگ ها</h3>
        <hr/>
        <div class="text-center mb-3">
            <a onclick="CreateGroup()" class="btn btn-primary">
                افزودن دسته بندی
                <i class="fa fa-plus-circle"></i>
            </a>
        </div>
        <div class="table-responsive" id="ListBlogGroup">
            @Html.Action("BlogGroupsList", "Blog_Group")
        </div>
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="MyModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header ">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body" id="MyModalBody">
            </div>
        </div>
    </div>
</div>

@section scripts
{
    <script>
        function CreateGroup() {
            $.get("/Admin/Blog_Group/Create",
                function (result) {
                    $("#MyModal").modal("show");
                    $("#MyModalBody").html(result);
             });
        }
        function EditBlog(Id) {
            $.get("/Admin/Blog_Group/Edit/"+Id,
                function (result) {
                    $("#MyModal").modal("show");
                    $("#MyModalBody").html(result);
                });
        }
        function DeleteBlog(id) {
            if (confirm("آیا از حذف مطمئن هستید؟")) {
                $.get("/Admin/Blog_Group/Delete/" + id, function (result) {

                });
            }
        }
        function ShowBlog(id) {
            if (confirm("آیا از نمایش این ایتم مطمئن هستید؟")) {
                $.get("/Admin/Blog_Group/ShowBlog/" + id, function (result) {
                });
            }
        }
        function SuccessProperty() {
            $("#MyModal").modal("hide");
        }
    </script>
}