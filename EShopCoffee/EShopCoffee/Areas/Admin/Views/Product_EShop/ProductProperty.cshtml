
@using EShopCoffee.Models.DataLayer
@model  EShopCoffee.Models.DataLayer.Product_Proerty_Select

@{
    ViewBag.Title = "ProductFeatuers";
    IEnumerable<Product_Property> propertyId = ViewBag.PropertyId;
    IEnumerable<Product_Proerty_Select> productPropertySelect = ViewBag.Property;

}

<h4 class="text-center font-weight-bold mt-4">ویژگی محصول</h4>
<hr />

@using (Html.BeginForm())
{
    <div>

        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(m => m.Product_Id)
            <div class="form-group">
                <div class="input-group mb-3 ">
                    <div class="input-group-prepend ">
                        @Html.LabelFor(model => model.Property_Id, htmlAttributes: new { @class = "input-group-text Bg-backgrund text-light label" })
                    </div>
                    <select id="Property_Id" name="Property_Id" class="form-control">

                        @foreach (var item in propertyId)
                        {
                            <option value="@item.Property_Id">@item.Property_Title</option>
                        }
                    </select>

                </div>
            </div>

            <div class="form-group">
                <div class="input-group mb-3 ">
                    <div class="input-group-prepend ">
                        @Html.LabelFor(model => model.Value, htmlAttributes: new { @class = "input-group-text Bg-backgrund text-light label" })
                    </div>
                    @Html.EditorFor(model => model.Value, new { htmlAttributes = new { @class = "form-control" } })
                    <p class="text-center">
                        @Html.ValidationMessageFor(model => model.Value, "", new { @class = "text-danger" })
                    </p>
                </div>
            </div>

            <div class="form-group text-center">
                <div class="text-center">
                    <button type="submit" title="ذخیره" class="btn bg-success  btn-block">
                        <i class="fa fa-save fa-2x text-light"></i>
                    </button>
                    <a href="@Url.Action("Index")" class="btn btn-info btn-block" title="بازگشت">
                        <i class="fa fa-arrow-circle-left fa-2x text-light"></i>
                    </a>
                </div>
            </div>
        </div>
    </div>
    <table class="table">
        <tr>
            <th class="font-weight-bold Bg-backgrund text-light">عنوان</th>
            <th class="font-weight-bold Bg-backgrund text-light">مقدار</th>
            <th class="font-weight-bold Bg-backgrund text-light"></th>
        </tr>
        @foreach (var item in productPropertySelect)
        {
            <tr id="Feature_@item.Product_Proerty_Id">
                <th>@item.Product_Property.Property_Title</th>
                <th>@item.Value</th>
                <th>
                    <a class="btn btn-danger btn-xs" title="حذف کردن ویژگی" onclick="DeleteFeature(@item.Product_Proerty_Id)">
                        <i class="fa fa-trash-o"></i>
                    </a>
                </th>
            </tr>
        }
    </table>
}
@section script
{
    <script>
        function DeleteFeature(id) {
            if (confirm("آیا از حذف مطمئن هستید")) {
                $.get("/Admin/Product_EShop/DeleteFeature/" + id, function () {
                    $("#Feature_" + id).hide("slow");
                });
            }
        }
    </script>

}
