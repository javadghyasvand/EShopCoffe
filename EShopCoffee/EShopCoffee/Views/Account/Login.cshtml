@model EShopCoffee.Models.ViewModels.LoginViewModel
@{
    ViewBag.Title = "Login";
    var queryString = @Request.QueryString.ToString().Contains("ReturnUrl");
}
@Styles.Render("~/Content/Asset/CSS/login.css")

<div class="container shadow bg-light border ">
    <div class="row  mt-5">
        <div class="col-md-6 mt-4 mb-5 text-center">
            <div class="m-2">
                <img class="img-responsive img-log a_color " max-width="300px" src="~/Content/Asset/Images/Logo/Login1.png" alt="قهوه دوپیو">
            </div>
            <div class="m-2">
                <a href="/Register" class="text-dark m-4 mb-5">ایجاد حساب کاربری</a>
            </div>
            <div class="m-2">
                <a href="/ForgotPassword" class="text-dark m-4">رمز عبور را فراموش کرده ام؟</a>
            </div>
        </div>
        <div class="col-md-6">
            <div class="col-md-10">
                <h4 class="mt-3">ورود</h4>
                <hr class="hr-temp">
                <br>
                <p>سلام ! لطفا شماره موبایل یا ایمیل خود را وارد کنید.</p>
                <br>

                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    if (User.Identity.IsAuthenticated && queryString == true)
                    {
                        <hr />
                        <div class="alert alert-danger mt-1">
                            <p>شما مجور ورود به بخش درخواست شده را ندارید</p>
                        </div>
                    }
                    if (Request.QueryString["recovery"] != null)
                    {
                        <hr />
                        <div class="alert alert-success mt-1">
                            <p>کلمه عبور شما با موفقیت تغییر کرد.</p>
                        </div>
                    }
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })


                    <div class="form-group">
                        <div class="input-group mb-2 ">
                            <div class="input-group">
                                @Html.LabelFor(model => model.User_Email, htmlAttributes: new { @class = "text-dark label" })
                            </div>
                            @Html.EditorFor(model => model.User_Email, new { htmlAttributes = new { @class = "form-control" } })

                        </div>
                        <p class="text-center">
                            @Html.ValidationMessageFor(model => model.User_Email, "", new { @class = "text-danger" })
                        </p>
                    </div>
                    <div class="form-group">
                        <div class="input-group mb-2 ">
                            <div class="input-group">
                                @Html.LabelFor(model => model.User_Password, htmlAttributes: new { @class = "text-dark label" })
                            </div>
                            @Html.EditorFor(model => model.User_Password, new { htmlAttributes = new { @class = "form-control" } })

                        </div>
                        <p class="text-center">
                            @Html.ValidationMessageFor(model => model.User_Password, "", new { @class = "text-danger" })
                        </p>
                    </div>


                    <div class="form-group">
                        @Html.CheckBoxFor(model => model.Remember, new { @class = "d-inline" })
                        <label class="label-agree-term">
                            <span>
                                <span></span>
                            </span> مرا به خاطرت
                            نگه دار
                        </label>
                        <p class="text-center">
                            @Html.ValidationMessageFor(model => model.User_Password, "", new { @class = "text-danger" })
                        </p>
                    </div>
                    <div class="form-group text-center mb-3">
                        <div class="text-center ">
                            <input type="submit" name="signin" id="signin" class="btn btn-success btn-block" value="ورود">
                            <a class="btn btn-info btn-block mb-5" href="\"> بارگشت به صفحه اصلی</a>
                        </div>
                    </div>
                }
            </div>

        </div>
    </div>

</div>