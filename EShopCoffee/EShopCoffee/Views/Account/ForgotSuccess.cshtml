@model EShopCoffee.Models.DataLayer.Users
@{
    ViewBag.Title = "ForgotSuccess";
}

<div class="container">
    <div class="row" style="text-align: right;">
        <div class="col-lg-12">
            <div class="box">
                <h3 class="text-center color_defult"></h3>
                <hr />
                <div class="col-lg-12 text-center">
                    <div dir="rtl">
                        <img class="img-thumbnail rounded-circle bg-light" width="150px" max-width="150px" src="~/Content/SiteFile/img/LogoEN.png" alt="قهوه دوپیو">
                        <h4 class="text-center mt-3 mb-3"> با فروشگاه اینترنتی<a class="font-weight-bolder" href="/"> دپیو </a> قهوه را تازه و آنلاین بخر</h4>
                        <h3 class="text-center m-2"><strong> @Model.User_Name </strong> عزیز !  </h3>
                        <div class="alert alert-success mt-1 mb-1">
                            <p class="text-center ml-4 mr-4"> ایمیل حاوی لینک بازیابی کلمه عبور به ایمیل <strong> @Model.User_Email </strong> ارسال شد. لطفا وارد ایمیل شوید و روی لینک کلیک کنید. </p>
                        </div>
                    </div>
                    <hr />
                    <hr />
                    <div class="text-center ">
                        <a class="btn btn-primary mb-5" href="\">
                            <i class="fa fa-arrow-circle-left fa-2x"></i>
                            بارگشت به صفحه اصلی
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
